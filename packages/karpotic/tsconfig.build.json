{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "composite": true,
    "rootDir": "src",
    "outDir": "dist/types",
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "references": [{ "path": "../utils/tsconfig.build.json" }],
  "include": ["src", "types"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.tsx",
    "dist",
    "node_modules"
  ]
}
